@page "{id:int}"
@model SGBApp.Pages.Authors.DetailsModel
@{
    ViewData["Title"] = "Detalle Autor";
}

<div class="container py-5">
    <h2 class="text-center mb-4 text-primary fw-bold">Detalle del Autor</h2>

    @if (Model.Author == null)
    {
        <div class="alert alert-warning text-center fw-semibold">Autor no encontrado.</div>
    }
    else
    {
        <div class="card shadow-sm border-0 rounded-4 mx-auto" style="max-width: 600px;">
            <div class="card-header bg-primary text-white rounded-top-4">
                <h5 class="card-title mb-0">@Model.Author.Name</h5>
            </div>
            <div class="card-body">
                <p class="fw-semibold mb-2"><i class="bi bi-book"></i> Biografía:</p>
                <p class="text-muted">@(!string.IsNullOrEmpty(Model.Author.Biography) ? Model.Author.Biography : "-")</p>
            </div>
            <div class="card-footer text-end bg-light border-top-0">
                <a asp-page="Index" class="btn btn-outline-primary btn-sm">Volver</a>
            </div>
        </div>
    }
</div>

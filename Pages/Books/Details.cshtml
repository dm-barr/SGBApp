@page "{id:int}"
@model SGBApp.Pages.Books.DetailsModel
@{
    ViewData["Title"] = "Detalle Libro";
}

<div class="container py-5">
    <h2 class="text-center mb-4 text-primary fw-bold">Detalle del Libro</h2>

    @if (Model.Book == null)
    {
        <div class="alert alert-warning text-center fw-semibold">Libro no encontrado.</div>
    }
    else
    {
        <div class="card shadow-sm border-0 rounded-4 mx-auto" style="max-width: 600px;">
            <div class="card-header bg-primary text-white rounded-top-4">
                <h5 class="card-title mb-0">@Model.Book.Title</h5>
            </div>
            <div class="card-body">
                <p class="fw-semibold mb-2"><i class="bi bi-person"></i> Autor:</p>
                <p class="text-muted">@(!string.IsNullOrEmpty(Model.Book.Author?.Name) ? Model.Book.Author.Name : "-")</p>

                <p class="fw-semibold mb-2"><i class="bi bi-upc-scan"></i> ISBN:</p>
                <p class="text-muted">@(!string.IsNullOrEmpty(Model.Book.ISBN) ? Model.Book.ISBN : "-")</p>

                <p class="fw-semibold mb-2"><i class="bi bi-collection"></i> Copias disponibles:</p>
                <p class="text-muted">@Model.Book.CopiesAvailable</p>

                <p class="fw-semibold mb-2"><i class="bi bi-building"></i> Editorial:</p>
                <p class="text-muted">@(!string.IsNullOrEmpty(Model.Book.Publisher) ? Model.Book.Publisher : "-")</p>
            </div>
            <div class="card-footer text-end bg-light border-top-0">
                <a asp-page="Index" class="btn btn-outline-primary btn-sm">Volver</a>
            </div>
        </div>
    }
</div>

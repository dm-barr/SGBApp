@page "{id:int}"
@model SGBApp.Pages.Students.DetailsModel
@{
    ViewData["Title"] = "Detalle Estudiante";
}

<div class="container py-5">
    <h2 class="text-center mb-4 text-primary fw-bold">Detalle del Estudiante</h2>

    @if (Model.Student == null)
    {
        <div class="alert alert-warning text-center fw-semibold">Estudiante no encontrado.</div>
    }
    else
    {
        <div class="card shadow-sm border-0 rounded-4 mx-auto" style="max-width: 600px;">
            <div class="card-header bg-primary text-white rounded-top-4">
                <h5 class="card-title mb-0">@Model.Student.Name</h5>
            </div>
            <div class="card-body">
                <p class="fw-semibold mb-2"><i class="bi bi-card-text"></i> Documento:</p>
                <p class="text-muted">@(!string.IsNullOrEmpty(Model.Student.DocumentNumber) ? Model.Student.DocumentNumber : "-")</p>

                <p class="fw-semibold mb-2"><i class="bi bi-envelope"></i> Email:</p>
                <p class="text-muted">@(!string.IsNullOrEmpty(Model.Student.Email) ? Model.Student.Email : "-")</p>

                <p class="fw-semibold mb-2"><i class="bi bi-telephone"></i> Teléfono:</p>
                <p class="text-muted">@(!string.IsNullOrEmpty(Model.Student.Phone) ? Model.Student.Phone : "-")</p>
            </div>
            <div class="card-footer text-end bg-light border-top-0">
                <a asp-page="Index" class="btn btn-outline-primary btn-sm">Volver</a>
            </div>
        </div>
    }
</div>
